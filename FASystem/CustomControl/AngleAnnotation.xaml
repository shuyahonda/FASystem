<UserControl x:Class="FASystem.CustomControl.AngleAnnotation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FASystem.CustomControl"
             mc:Ignorable="d" Height="50" Width="100">
    <Grid>
        <Border x:Name="AnnotationBack" BorderBrush="#FF6E6E6E" BorderThickness="1" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="100" Background="#FFC6B8B8"/>
        <TextBlock x:Name="AngleText" Margin="0,0,0,0.286" TextWrapping="Wrap" Text="180°" FontSize="29.333" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Line Fill="#FFDED1D1" Stroke="Tomato" StrokeThickness="3" />
    </Grid>
</UserControl>
